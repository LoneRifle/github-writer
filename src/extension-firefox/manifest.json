{
  "name": "GitHub Rich-Text Editor (RTE)",
  "short_name": "GitHub RTE",
  "description": "WYSIWYG, rich-text editing in GitHub. Powered by CKEditor.",
  "version": "0.1.0",
  "author": "CKSource",
  "applications": {
	"gecko": {
	  "id": "github-rte@cksource.com"
	}
  },
  "permissions": [
	// The following are domains used by GitHub to upload files. We need to have permissions on them,
	// so we avoid cross-origin issues when mimicking the upload within the GitHubUploadAdapter class.
	"https://github.com/",
	"https://*.s3.amazonaws.com/"
  ],
  "content_scripts": [
	{
	  "matches": [
		"https://github.com/*/issues/*",
		"https://github.com/*/pull/*",
		"https://github.com/*/compare/*"
	  ],
	  "js": [
		"github-rte.js"
	  ],
	  "css": [
		"github-rte.css"
	  ],
	  "run_at": "document_end"
	}
  ],
  "icons": {
	"16": "github-rte-16.png",
	"32": "github-rte-32.png",
	"48": "github-rte-48.png",
	"96": "github-rte-96.png",
	"128": "github-rte-128.png"
  },
  "manifest_version": 2
}
